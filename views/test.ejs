<form action="/createEvent" method="POST" enctype="multipart/form-data">
    <label for="eventName">Etkinlik Adı:</label><br>
    <input type="text" name="eventName" id="eventName" required><br><br>
  
    <label for="description">Açıklama:</label><br>
    <textarea name="description" id="description" rows="4" cols="50" required></textarea><br><br>
  
    <label for="timestamp">Zaman (YYYY-MM-DD HH:MM:SS):</label><br>
    <input type="text" name="timestamp" id="timestamp" required><br><br>
  
    <label for="roomid">Salon ID:</label><br>
    <input type="number" name="roomid" id="roomid" required><br><br>
  
    <label for="images">Görseller (opsiyonel):</label><br>
    <input type="file" name="images" id="images" multiple accept="image/*"><br><br>
  
    <button type="submit">Gönder</button>
  </form>
  