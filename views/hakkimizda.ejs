    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', sans-serif;
        }

        .hero {
            background-color: #343a40;
            color: white;
            padding: 80px 20px;
            text-align: center;
        }

        .hero h1 {
            font-size: 2.8rem;
            margin-bottom: 10px;
        }

        .hero p {
            font-size: 1.1rem;
        }

        .icerik {
            padding: 60px 15px;
        }

        .icerik p {
            font-size: 1.05rem;
